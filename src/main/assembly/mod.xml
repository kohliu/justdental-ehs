<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>ts-service/bin</outputDirectory>
            <directory>bin</directory>
            <includes>
                <include>**/**</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>ts-service/classes</outputDirectory>
            <directory>target/classes</directory>
            <includes>
                <include>**/**</include>
            </includes>
            <fileMode>755</fileMode>
            <directoryMode>755</directoryMode>
        </fileSet>
        <fileSet>
            <outputDirectory>ts-service/service-data</outputDirectory>
            <directory>service-data</directory>
            <includes>
                <include>*</include>
            </includes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>ts-service/service-data</outputDirectory>
            <directory>service-data</directory>
            <includes>
                <include>**/**</include>
            </includes>
            <fileMode>644</fileMode>
            <directoryMode>755</directoryMode>
            <lineEnding>unix</lineEnding>
        </fileSet>
        <fileSet>
            <outputDirectory>ts-service/lib</outputDirectory>
            <directory>target</directory>
            <includes>
                <include>**/techstomach-ehs*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>